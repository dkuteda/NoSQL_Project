@model NoSQL_Project.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Update Employee";
}

<div class="form-page-header">
    <div class="container">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-user-edit me-3"></i>Update Employee
        </h1>
        <p class="lead mb-0">Edit team member information</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <!-- Error Alert -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="UpdateEmployee" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Employee.EmployeeId" />

            <!-- Personal Information Section -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-user-circle"></i>Personal Information
                </h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Employee.FirstName" class="form-label">
                                <i class="fas fa-signature me-2"></i>First Name
                            </label>
                            <input asp-for="Employee.FirstName" class="form-control"
                                   placeholder="Leave empty to keep: @Model.Employee.FirstName" />
                            <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Employee.LastName" class="form-label">
                                <i class="fas fa-signature me-2"></i>Last Name
                            </label>
                            <input asp-for="Employee.LastName" class="form-control"
                                   placeholder="Leave empty to keep: @Model.Employee.LastName" />
                            <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div> <!-- ✅ Close the row -->

                <div class="form-group py-2">
                    <label asp-for="Employee.Password" class="form-label"></label>
                    <input asp-for="Employee.Password" class="form-control" type="password"
                           placeholder="Leave empty to keep current password" />
                    <small class="form-text text-muted">Leave blank to keep current password.</small>
                    <span asp-validation-for="Employee.Password" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Employee.Location" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Location
                            </label>
                            <select asp-for="Employee.Location" asp-items="Model.LocationOptions"
                                    class="form-control form-control-select">
                                <option value="">Keep current: @Model.Employee.Location</option>
                            </select>
                            <span asp-validation-for="Employee.Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-address-book"></i>Contact Information
                </h3>

                <div class="form-group-enhanced">
                    <label asp-for="Employee.Email" class="form-label"></label>
                    <input asp-for="Employee.Email" class="form-control" type="email"
                           placeholder="Leave empty to keep current email/>
                    <small class="form-text text-muted">Leave blank to keep current email.</small>
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>

                <div class="form-group-enhanced">
                    <label asp-for="Employee.PhoneNumber" class="form-label">
                        <i class="fas fa-phone me-2"></i>Phone Number
                    </label>
                    <input asp-for="Employee.PhoneNumber" class="form-control"
                           placeholder="Leave empty to keep: @Model.Employee.PhoneNumber" />
                    <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Employment Details Section -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-briefcase"></i>Employment Details
                </h3>

                <div class="form-group-enhanced">
                    <label asp-for="Employee.UserRole" class="form-label">
                        <i class="fas fa-user-tag me-2"></i>Role
                    </label>
                    <select asp-for="Employee.UserRole" asp-items="Model.UserRoleOptions"
                            class="form-control form-control-select">
                        <option value="">Keep current: @Model.Employee.UserRole</option>
                    </select>
                    <span asp-validation-for="Employee.UserRole" class="text-danger"></span>
                </div>

                <div class="form-group-enhanced">
                    <div class="form-check">
                        <input asp-for="Employee.IsActive" class="form-check-input" />
                        <label asp-for="Employee.IsActive" class="form-check-label">
                            <i class="fas fa-check-circle me-2"></i>Active Employee
                        </label>
                    </div>
                    <small class="form-text text-muted">
                        Deactivated employees cannot log in or receive new tickets.
                    </small>
                    <span asp-validation-for="Employee.IsActive" class="text-danger"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <div class="btn-group-form">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Update Employee
                    </button>
                    <a href="/Employees/Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>