@model NoSQL_Project.ViewModels.TicketViewModel
@{
    Ticket recentTicket = (Ticket)ViewData["RecentTicket"];
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="bg-light p-4 rounded-3 mb-4 d-flex justify-content-between align-items-center shadow-sm">
        <h4 class="fw-bold mb-0">Dashboard</h4>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary">Filter</button>
            <a href="@Url.Action("AddTicket", "Tickets")" class="btn btn-primary">
                Create a New Ticket
            </a>
        </div>
    </div>

    @if (ViewBag?.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
        </div>
    }

    <!-- Dashboard Content -->
    <div class="row g-4">
        <!-- Left Column: Tickets -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h5 class="text-muted mb-1">Total Tickets</h5>
                        <h2 class="fw-bold">@Model.TicketList?.Count() ?? 0</h2>
                    </div>
                    <a href="@Url.Action("TicketDashboard", "Tickets")" class="text-decoration-none">View All</a>
                </div>

                <hr />

                <!-- Ticket List -->
                @if (Model.TicketList != null && Model.TicketList.Any())
                {
                    @foreach (var ticket in Model.TicketList.Take(5))
                    {
                        <div class="position-relative border-bottom py-3 px-2 hover-bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1 text-primary">@ticket.Title</h6>
                                    <small class="text-muted">@ticket.CreatedBy.FirstName @ticket.CreatedBy.LastName</small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-success text-uppercase">@ticket.Status</span><br />
                                    <small class="text-muted">@ticket.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>

                            <!-- Clickable area -->
                            <a href="@Url.Action("Details", "Tickets", new { id = ticket.TicketId })" class="stretched-link"></a>
                        </div>
                    }


                    <div class="text-center mt-3">
                        <button class="btn btn-outline-secondary btn-sm">Load More</button>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <p>No tickets found. Click <strong>Create a New Ticket</strong> to add one.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Right Column: Most Recent Ticket -->
        @if (recentTicket != null)
        {
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm p-4 h-100">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted text-uppercase">Most Recent Ticket</h6>
                        <a href="@Url.Action("Details", "Tickets", new { id = recentTicket.TicketId })" class="btn btn-outline-primary btn-sm">See Details</a>
                    </div>

                    <p class="mb-1 text-muted">User</p>
                    <p class="fw-semibold">@recentTicket.CreatedBy.FirstName @recentTicket.CreatedBy.LastName</p>

                    <p class="mb-1 text-muted">Submitted</p>
                    <p class="fw-semibold">@recentTicket.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>

                    <p class="mb-1 text-muted">Subject</p>
                    <p class="fw-semibold">@recentTicket.Title</p>

                    <p class="mb-1 text-muted">Ticket Issue</p>
                    <p>@recentTicket.Description</p>
                </div>
            </div>
        }
    </div>
</div>
