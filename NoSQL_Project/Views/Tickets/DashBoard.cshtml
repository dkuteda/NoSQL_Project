@model NoSQL_Project.ViewModels.DashboardViewModel

<div class="container py-4">
    <h2 class="fw-bold mb-4 text-primary">Dashboard</h2>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3 text-center">
                <h6 class="text-muted mb-1">Open Tickets</h6>
                <h3 class="fw-bold text-warning">@Model.OpenPercent%</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3 text-center">
                <h6 class="text-muted mb-1">Resolved Tickets</h6>
                <h3 class="fw-bold text-success">@Model.ResolvedPercent%</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3 text-center">
                <h6 class="text-muted mb-1">Closed Tickets</h6>
                <h3 class="fw-bold text-danger">@Model.ClosedPercent%</h3>
            </div>
        </div>
    </div>

    <!-- Ticket List -->
    <div class="card border-0 shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">Recent Tickets</h5>
            <div class="btn-group">
                <a href="@Url.Action("Dashboard", new { sortOrder = "priority_asc" })"
                   class="btn btn-outline-primary btn-sm @(ViewBag.SortOrder == "priority_asc" ? "active" : "")">
                    ↑ Priority (Low→High)
                </a>
                <a href="@Url.Action("Dashboard", new { sortOrder = "priority_desc" })"
                   class="btn btn-outline-primary btn-sm @(ViewBag.SortOrder == "priority_desc" ? "active" : "")">
                    ↓ Priority (High→Low)
                </a>
            </div>
        </div>

        @if (Model.TicketList != null && Model.TicketList.Any())

        {
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.TicketList)
                    {
                        <tr>
                            <td>@ticket.Title</td>
                            <td>
                                <span class="badge bg-@(
                                    ticket.Status == NoSQL_Project.Enums.TicketStatus.open ? "warning" :
                                    ticket.Status == NoSQL_Project.Enums.TicketStatus.resolved ? "success" : "secondary"
                                )">
                                    @ticket.Status
                                </span>
                            </td>

                            <!-- 🔴🟡🟢 Priority color badges -->
                            <td>
                                <span class="badge bg-@(
                                    ticket.Priority.ToString().ToLower() == "high" ? "danger" :
                                    ticket.Priority.ToString().ToLower() == "medium" ? "warning" :
                                    "success"
                                )">
                                    @ticket.Priority
                                </span>
                            </td>

                            <td>@ticket.CreatedBy?.FirstName</td>
                            <td>@ticket.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <a href="@Url.Action("TicketDetails", "Tickets", new { id = ticket.TicketId })"
                                   class="btn btn-sm btn-outline-info">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        else

        {
            <p class="text-center text-muted py-3 mb-0">No tickets found.</p>
        }
    </div>
</div>