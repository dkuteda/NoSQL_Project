@model NoSQL_Project.ViewModels.TicketViewModel

@{
    ViewData["Title"] = "Update Ticket";
}

<div class="form-page-header">
    <div class="container">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-user-edit me-3"></i>Update Ticket
        </h1>
        <p class="lead mb-0">Edit team member information</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <!-- Error Alert -->
        @if (ViewBag != null && ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="UpdateTicket" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Ticket.TicketId" />
            <input type="hidden" asp-for="Ticket.ResolutionSteps" />

            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-user-circle"></i>Personal Information
                </h3>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.Title" class="form-label">
                                <i class="fas fa-signature me-2"></i>Title
                            </label>
                            <input asp-for="Ticket.Title" class="form-control" required />
                            <span asp-validation-for="Ticket.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.Description" class="form-label">
                                <i class="fas fa-signature me-2"></i>Description
                            </label>
                            <input asp-for="Ticket.Description" class="form-control" required />
                            <span asp-validation-for="Ticket.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.Priority" class="form-label">
                                <i class="fas fa-venus-mars me-2"></i>Priority
                            </label>
                            <select asp-for="Ticket.Priority" asp-items="Model.PriorityOptions"
                                    class="form-control form-control-select"></select>
                            <span asp-validation-for="Ticket.Priority" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.TypeOfIncident" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Type Of Incident
                            </label>
                            <select asp-for="Ticket.TypeOfIncident" asp-items="Model.TypeOfIncidentOptions"
                                    class="form-control form-control-select"></select>
                            <span asp-validation-for="Ticket.TypeOfIncident" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.Deadline" class="form-label">
                                <i class="fas fa-signature me-2"></i>Descripion
                            </label>
                            <input asp-for="Ticket.Deadline" class="form-control" required />
                            <span asp-validation-for="Ticket.Deadline" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.CreatedAt" class="form-label">
                                <i class="fas fa-signature me-2"></i>CreatedAt
                            </label>
                            <input asp-for="Ticket.CreatedAt" class="form-control" required />
                            <span asp-validation-for="Ticket.CreatedAt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.CreatedBy" class="form-label">
                                <i class="fas fa-signature me-2"></i>CreatedBy
                            </label>
                            <input asp-for="Ticket.CreatedBy" class="form-control" required />
                            <span asp-validation-for="Ticket.CreatedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group-enhanced">
                            <label asp-for="Ticket.HandledBy" class="form-label">
                                <i class="fas fa-signature me-2"></i>HandledBy
                            </label>
                            <input asp-for="Ticket.HandledBy" class="form-control" required />
                            <span asp-validation-for="Ticket.HandledBy" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="form-section">
                <h3 class="form-section-title">
                    <i class="fas fa-address-book"></i>Contact Information
                </h3>

                <div class="col-md-6">
                    <div class="form-group-enhanced">
                        <label asp-for="@Model.Ticket.Status" class="form-label">
                            <i class="fas fa-map-marker-alt me-2"></i>Status
                        </label>
                        <select asp-for="@Model.Ticket.Status" asp-items="Model.StatusOptions"
                                class="form-control form-control-select"></select>
                        <span asp-validation-for="@Model.Ticket.Status" class="text-danger"></span>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <div class="btn-group-form">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Update Ticket
                        </button>
                        <a href="/TicketDashboard" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
        </form>
    </div>
</div>