@model List<NoSQL_Project.Models.Ticket>

@foreach (var ticket in Model)

{
    <div class="ticket-card border-bottom py-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-1 text-primary">@ticket.Title</h6>
                <small class="text-muted">@ticket.CreatedBy.FirstName</small>
            </div>
            <div class="text-end">
                <span class="badge bg-success">@ticket.Status</span><br />
                <small class="text-muted">@ticket.CreatedAt.ToString("MMM dd, yyyy")</small>
            </div>
        </div>
    </div>
}